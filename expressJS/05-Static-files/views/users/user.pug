extends ../layouts/header
block header

    .container-md
        h2 View User Detail
        table(style="width:100%")
            tr
                th Name
                th Phone
                th Age

            tr
                td= user.name
                td= user.phone
                td= user.age
                td
                    a(href="/users/edit/" + user.id)
                        button.btn.btn-primary(type="button", action="users/edit/" + user.id) Edit
                    a(href="/users/delete/" + user.id)
                        button.btn.btn-primary(type="button", action="users/delete/" + user.id) Delete

extends ../layouts/header
block header

    .container
        h2 Edit
        if errors
            each error in errors
                .alert.alert-danger= error + " is required"
            form(action="/users/update/"+ value.id, method="post")

                            .form-group
                                label(for="name") Name
                                input#name.form-control(name="name",type="text", value=value?value.name:"")
                                label(for="phone") Phone
                                input#phone.form-control(name="phone",type="text", value=value?value.phone:"")
                                label(for="age") Age
                                input#age.form-control(name="age",type="text", value=value?value.age:"")
                                button.btn.btn-primary(type="primary") Update!
        else
            form(action="/users/update/"+ user.id, method="post")

                            .form-group
                                label(for="name") Name
                                input#name.form-control(name="name",type="text",value=user.name)
                                label(for="phone") Phone
                                input#phone.form-control(name="phone",type="text",value=user.phone)
                                label(for="age") Age
                                input#age.form-control(name="age",type="text",value=user.age)
                                button.btn.btn-primary(type="primary") Update!
